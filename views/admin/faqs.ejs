<html>

<head>
    <meta property="og:description" content="參與，讓彰師，變得更好。">
    <meta property="og:type" content="website">
    <meta property="og:rich_attachment" content="true" />
    <%- include('../head', {title : webTitle}) %>
    <link rel="stylesheet" href="/styles/index.css">
</head>

<body>
    <% include ../nav %>
    <div class="container">
        <ol class="breadcrumb">
            <li><a href="/admin"><i class="fa fa-home fa-1x fa-inverse" aria-hidden="true"></i> 後台首頁</a></li>
            <li class="active">常見問題管理</li>
        </ol>
            <ul class="nav nav-tabs">
                <li role="presentation"><a href="/admin">議題管理</a></li>
                <li role="presentation"><a href="/admin/admin">管理員管理</a></li>
                <li role="presentation" class="active"><a href="#">常見問題管理</a></li>
            </ul>
        <a class="btn btn-default" href="/admin/editor" role="button">新增常見問題</a>
        <table class="table table-striped table-hover table-condensed table-bordered">
            <thead>
                <tr class="active">
                    <td>選取</td>
                    <td>操作</td>
                    <td>ID</td>
                    <td>標題</td>
                    <td>建立時間</td>
                    <td>更新時間</td>
                </tr>
            </thead>
            <tbody>
                <% data.faqs.forEach((e, i) => { %>
                    <tr>
                        <td><input type="checkbox"></td>
                        <td>
                            <div class="dropdown">
                                <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu<%= e.id %>" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenu<%= e.id %>" data-id="<%= e.id %>">
                                    <li><a href="/admin/editor/<%= e.id %>">編輯</a></li>
                                    <li role="separator" class="divider"></li>
                                    <li><a onclick="return confirm('確定刪除?')?true:false" href="/admin/faqs/remove/<%= e.id %>">移除</a></li>
                                </ul>
                            </div>
                        </td>
                        <td><%= e.id %></td>
                        <td><a href="<%= `${site_url}faqs/detail/${e.id}` %>"><%= e.title %></a></td>
                        <td><%= formatTime(e.createdAt) %></td>
                        <td><%= formatTime(e.updatedAt) %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    <%- include ../footer %>
</body>

</html>