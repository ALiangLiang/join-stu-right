<html>

<head>
    <meta property="og:description" content="參與，讓彰師，變得更好。">
    <meta property="og:type" content="website">
    <meta property="og:url" content="<%= data.url %>" />
    <meta property="og:rich_attachment" content="true" />
     <%- include('../head', {title : data.title + ' | '  + webTitle}) %>
     <style>
      #propose-btn {
        margin-top: 30px;
        font-size: 72px;
      }
     </style>
</head>

<body>
<% include ../nav %>
    <div class="container">
        <ol class="breadcrumb">
            <li><a href="/"><i class="fa fa-home fa-inverse" aria-hidden="true"></i> 首頁</a></li>
            <li class="active">
                <%= data.title %>
            </li>
        </ol>
        <div class="case-container <%= data.type %>-case-container">
            <a id="propose-btn" role="button" class="btn btn-<%= data.btnTheme %> btn-lg btn-block" href="/propose/<%= data.type %>"><i class="fa fa-hand-rock-o" aria-hidden="true"></i> 我要<%= data.title %></a>
            <header class="page-header">
                <h1><i class="fa fa-hand-rock-o" aria-hidden="true"></i> <%= data.title %></h1>
            </header>
            <main id="appeal">
                <% data.cases.forEach(function(Case){ %>
                    <%- include('article', Object.assign(Case, {btnTheme : data.btnTheme})) %>
                <% }); %>
            </main>
        </div>
    </div>
    <%- include ../footer %>

</body>

</html>
